{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@substack-intelligence/database": ["../../packages/database/src"],
      "@substack-intelligence/ingestion": ["../../services/ingestion/src"],
      "@substack-intelligence/ingestion/src": ["../../services/ingestion/src"],
      "@substack-intelligence/ingestion/src/utils/html-parser": [
        "../../services/ingestion/src/utils/html-parser"
      ],
      "@substack-intelligence/ai": ["../../packages/ai/src"],
      "@substack-intelligence/shared": ["../../packages/shared/src"],
      "@substack-intelligence/email": ["../../apps/email/src"],
      "@substack-intelligence/lib": ["../../lib"],
      "@substack-intelligence/lib/*": ["../../lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "tests", "playwright.config.ts", "playwright.setup.ts", "scripts/setup-test-auth.ts", "scripts/create-test-user.ts"]
}
