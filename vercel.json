{
  "version": 2,
  "name": "substack-intelligence",
  "alias": ["substack-intelligence.vercel.app"],
  "regions": ["iad1", "sfo1"],
  "framework": "nextjs",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "functions": {
    "apps/web/app/api/*/route.ts": {
      "maxDuration": 60
    },
    "apps/web/app/api/ai/*/route.ts": {
      "maxDuration": 300
    },
    "apps/web/app/api/reports/generate/route.ts": {
      "maxDuration": 300
    },
    "apps/web/app/api/inngest/route.ts": {
      "maxDuration": 900
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), interest-cohort=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        },
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/favicon.ico",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/monitoring/health"
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "/dashboard/admin",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-intelligence",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * 0"
    },
    {
      "path": "/api/cron/security-audit",
      "schedule": "0 1 * * 1"
    }
  ],
  "env": {
    "VERCEL_ENV": "production",
    "NODE_ENV": "production"
  }
}